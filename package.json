{
  "name": "ovrmnd-cli",
  "version": "1.0.0",
  "description": "A universal, lightweight command-line interface (CLI) designed to be a simple bridge between Large Language Models (LLMs) and any REST API.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "ava",
    "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjbrum/ovrmnd-cli.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kjbrum/ovrmnd-cli/issues"
  },
  "homepage": "https://github.com/kjbrum/ovrmnd-cli#readme",
  "dependencies": {
    "@types/sinon": "^17.0.4",
    "dotenv": "^17.0.1",
    "flat-cache": "^6.1.11",
    "js-yaml": "^4.1.0",
    "sinon": "^21.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/chalk": "^2.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@types/yargs": "^17.0.33",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
