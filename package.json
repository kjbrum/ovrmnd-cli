{
  "name": "ovrmnd",
  "version": "0.1.0",
  "description": "Universal CLI bridge between LLMs and REST APIs",
  "main": "dist/cli.js",
  "bin": {
    "ovrmnd": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cli": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build"
  },
  "keywords": [
    "cli",
    "api",
    "rest",
    "yaml",
    "llm",
    "automation"
  ],
  "author": "Kyle Brumm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kjbrum/ovrmnd-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kjbrum/ovrmnd-cli.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.6.1",
    "flat-cache": "^5.0.0",
    "js-yaml": "^4.1.0",
    "prompts": "^2.4.2",
    "winston": "^3.11.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/flat-cache": "^2.0.2",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
